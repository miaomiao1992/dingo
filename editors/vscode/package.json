{
  "name": "dingo",
  "displayName": "Dingo Language Support",
  "description": "Syntax highlighting and language support for Dingo - a modern meta-language for Go",
  "version": "0.2.0",
  "publisher": "dingo",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/dingo"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Themes"
  ],
  "keywords": [
    "dingo",
    "go",
    "golang",
    "result",
    "option",
    "error-handling",
    "syntax-highlighting",
    "transpiler",
    "meta-language",
    "type-safety"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:dingo",
    "onLanguage:go"
  ],
  "contributes": {
    "languages": [
      {
        "id": "dingo",
        "aliases": [
          "Dingo",
          "dingo"
        ],
        "extensions": [
          ".dingo"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "dingo",
        "scopeName": "source.dingo",
        "path": "./syntaxes/dingo.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Dingo",
      "properties": {
        "dingo.highlightGeneratedCode": {
          "type": "boolean",
          "default": true,
          "description": "Enable highlighting of generated code sections in .go files"
        },
        "dingo.generatedCodeStyle": {
          "type": "string",
          "enum": [
            "subtle",
            "bold",
            "outline",
            "disabled"
          ],
          "default": "subtle",
          "enumDescriptions": [
            "Light background color only (recommended)",
            "Background color with border",
            "Border outline only",
            "Disable highlighting"
          ],
          "description": "Visual style for generated code highlighting"
        },
        "dingo.generatedCodeColor": {
          "type": "string",
          "default": "#3b82f660",
          "description": "Background color for generated code (hex with alpha channel, default: ~38% opacity)"
        },
        "dingo.generatedCodeBorderColor": {
          "type": "string",
          "default": "#3b82f680",
          "description": "Border color for bold/outline styles (default: ~50% opacity)"
        },
        "dingo.hideGeneratedMarkers": {
          "type": "boolean",
          "default": false,
          "description": "Hide DINGO:GENERATED comment markers in the editor (decorative only, comments remain in file)"
        }
      }
    },
    "commands": [
      {
        "command": "dingo.toggleGeneratedCodeHighlighting",
        "title": "Dingo: Toggle Generated Code Highlighting"
      },
      {
        "command": "dingo.compareWithSource",
        "title": "Dingo: Compare with Source File",
        "icon": "$(diff)"
      }
    ],
    "keybindings": [
      {
        "command": "dingo.compareWithSource",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "resourceExtname == .dingo || resourceExtname == .golden"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build-grammar": "node scripts/build-grammar.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^2.22.0",
    "js-yaml": "^4.1.0",
    "typescript": "^5.0.0"
  }
}
