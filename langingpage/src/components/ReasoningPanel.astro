---
// Safe markdown rendering using vetted libraries
// Reference: ai-docs/09-markdown.md (external parsers)
//            ai-docs/best-practices-checklist.md (security)

import { marked } from 'marked';
import DOMPurify from 'isomorphic-dompurify';

interface Props {
  markdown: string;
}

const { markdown } = Astro.props;

if (!markdown) {
  return null;
}

// Configure marked for GitHub Flavored Markdown
marked.setOptions({
  gfm: true,
  breaks: true,
});

// Parse markdown and sanitize HTML to prevent XSS attacks
const rawHtml = await marked.parse(markdown);
const htmlContent = DOMPurify.sanitize(rawHtml, {
  ALLOWED_TAGS: ['h1', 'h2', 'h3', 'h4', 'p', 'ul', 'ol', 'li', 'code', 'pre', 'strong', 'em', 'a', 'br'],
  ALLOWED_ATTR: ['href', 'title'],
});
---

