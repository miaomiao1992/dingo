package main

import (
	"fmt"
)

func main() {

	complexCalc := func(x int) int {
		temp := x * 2
		result := temp + 10
		return result
	}
	result1 := complexCalc(5)
	fmt.Println("Complex calc on 5:", result1)

	validator := func(n int) bool {
		if n < 0 {
			return false
		}
		if n > 100 {
			return false
		}
		return true
	}
	result2 := validator(50)
	result3 := validator(150)
	fmt.Println("Validate 50:", result2)
	fmt.Println("Validate 150:", result3)

	compare := func(a int, b int) int {
		if a > b {
			return 1
		}
		if a < b {
			return -1
		}
		return 0
	}
	result4 := compare(10, 5)
	result5 := compare(3, 8)
	result6 := compare(7, 7)
	fmt.Println("Compare 10, 5:", result4)
	fmt.Println("Compare 3, 8:", result5)
	fmt.Println("Compare 7, 7:", result6)

	sumUpTo := func(n int) int {
		sum := 0
		for i := 1; i <= n; i++ {
			sum += i
		}
		return sum
	}
	result7 := sumUpTo(5)
	fmt.Println("Sum 1 to 5:", result7)

	categorize := func(age int) int {
		if age < 13 {
			return 1
		}
		if age < 20 {
			return 2
		}
		if age < 65 {
			return 3
		}
		return 4
	}
	result8 := categorize(10)
	result9 := categorize(17)
	result10 := categorize(35)
	result11 := categorize(70)
	fmt.Println("Age 10:", result8)
	fmt.Println("Age 17:", result9)
	fmt.Println("Age 35:", result10)
	fmt.Println("Age 70:", result11)

	applyTwice := func(n int, f func(int) int) int {
		return f(f(n))
	}
	increment := func(x int) int {
		return x + 1
	}
	result13 := applyTwice(5, increment)
	fmt.Println("Apply increment twice to 5:", result13)

	processor := func(x int, y int) int {
		sum := x + y
		product := x * y
		if sum > product {
			return sum
		}
		return product
	}
	result14 := processor(3, 4)
	result15 := processor(10, 2)
	fmt.Println("Process 3, 4:", result14)
	fmt.Println("Process 10, 2:", result15)
}
