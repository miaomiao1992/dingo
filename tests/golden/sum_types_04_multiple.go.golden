package main

type StatusTag uint8

const (
	StatusTagPending StatusTag = iota
	StatusTagActive
)

type Status struct {
	tag StatusTag
}

func StatusPending() Status {
	return Status{tag: StatusTagPending}
}
func StatusActive() Status {
	return Status{tag: StatusTagActive}
}
func (e Status) IsPending() bool {
	return e.tag == StatusTagPending
}
func (e Status) IsActive() bool {
	return e.tag == StatusTagActive
}

type PriorityTag uint8

const (
	PriorityTagLow PriorityTag = iota
	PriorityTagHigh
)

type Priority struct {
	tag PriorityTag
}
func PriorityLow() Priority {
	return Priority{tag: PriorityTagLow}
}
func PriorityHigh() Priority {
	return Priority{tag: PriorityTagHigh}
}
func (e Priority) IsLow() bool {
	return e.tag == PriorityTagLow
}
func (e Priority) IsHigh() bool {
	return e.tag == PriorityTagHigh
}
