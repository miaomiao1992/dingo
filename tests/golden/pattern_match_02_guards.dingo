package main

// Test: Pattern matching with guards
// Feature: Match with conditional guards
// Complexity: intermediate

enum Value {
	Int(int),
	String(string),
}

func describe(v Value) string {
	return match v {
		Value_Int(n) if n > 0 => "Positive number",
		Value_Int(n) if n < 0 => "Negative number",
		Value_Int(_) => "Zero",
		Value_String(s) if len(s) > 5 => "Long string",
		Value_String(_) => "Short string",
	}
}

func main() {
	val1 := Value_Int(42)
	val2 := Value_String("hello world")

	println(describe(val1))
	println(describe(val2))
}
