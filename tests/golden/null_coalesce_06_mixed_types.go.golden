type User struct {
	name    string
	profile *Profile
}
type Profile struct {
	bio string
}
func main() {

	user := getUser()
	profileOpt := func() __INFER__ {
		if user.IsNone() {
			return __INFER___None()
		}
		user := user.Unwrap()
		return user.profile
	}()
	bioOpt := profileOpt
	bio := func() string {
		if bioOpt.IsSome() {
			return bioOpt.Unwrap()
		}
		return "No bio"
	}()

	userPtr := getUserPtr()
	nameOpt := func() __INFER__ {
		if userPtr == nil {
			return nil
		}
		return userPtr.name
	}()
	name := func() string {
		if nameOpt.IsSome() {
			return nameOpt.Unwrap()
		}
		return "Anonymous"
	}()

	user2 := UserOptionSome(User{
		name:    "Bob",
		profile: &Profile{bio: "Engineer"},
	})
	profileOpt2 := func() __INFER__ {
		if user2.IsNone() {
			return __INFER___None()
		}
		user21 := user2.Unwrap()
		return user21.profile
	}()
	bioOpt2 := profileOpt2
	profile := func() string {
		if bioOpt2.IsSome() {
			return bioOpt2.Unwrap()
		}
		return "Default bio"
	}()

	user3 := getUser()
	emailOpt := func() __INFER__ {
		if user3.IsNone() {
			return __INFER___None()
		}
		user32 := user3.Unwrap()
		return user32.getEmail()
	}()
	email := func() string {
		if emailOpt.IsSome() {
			return emailOpt.Unwrap()
		}
		return "no-email"
	}()

	println("Bio:", bio)
	println("Name:", name)
	println("Profile:", profile)
	println("Email:", email)
}
func getUser() UserOption {
	return UserOptionNone()
}
func getUserPtr() *User {
	return nil
}
func (u User) getEmail() *string {
	email := u.name + "@example.com"
	return &email
}
