package main

// Test: Lambda closures capturing variables
// Feature: Lambda closures
// Complexity: advanced

func makeAdder(x int) func(int) int {
	// Lambda captures x from outer scope
	return |y| x + y
}

func makeCounter() func() int {
	let count = 0
	// Lambda captures and modifies count
	return || {
		count = count + 1
		return count
	}
}

func main() {
	add5 := makeAdder(5)
	println("5 + 3 =", add5(3))

	counter := makeCounter()
	println("Count:", counter())
	println("Count:", counter())
}
